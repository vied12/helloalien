@-webkit-keyframes fadeIn:
	from:
		opacity:0
	to:
		opacity:1
@-moz-keyframes fadeIn:
	from: 
		opacity:0
	to: 
		opacity:1
@keyframes fadeIn:
 	from:
 		opacity:0
	to:
 		opacity:1
 
.fade-in:
    opacity:0 
    -webkit-animation:fadeIn ease-in 1
    -moz-animation:fadeIn ease-in 1
    animation:fadeIn ease-in 1
 
    -webkit-animation-fill-mode:forwards
    -moz-animation-fill-mode:forwards
    animation-fill-mode:forwards
 
    -webkit-animation-duration:1s
    -moz-animation-duration:1s
    animation-duration:1s

TEXT_COLOR  = #222
TILE_BRAND_COLOR        = "rgba(10,12,6,0.7)"
ALTERNATE_FONT = Verdana, sans-serif

body:
	font-family: 'Ubuntu', sans-serif;
	background-color 	: #F2F2F2
	color   : $TEXT_COLOR
	overflow : hidden
	a: 
		color 	: #98B2C6
	.disableTextSelection:
		-webkit-user-select 	: none
		-moz-user-select 		: none  
		-ms-user-select 		: none      
		user-select 			: none

.ContribForm:
	.uploadField:
		width: 225px
		input[type="file"]:
			opacity:0
			width: 1px
		label:
			background-color: black
			display: block
			color: white
			&:hover:
				cursor: pointer
	color   : $TEXT_COLOR
	padding : 20px 0 0 0px
	.contrib-form-background:
		background-image: url('')
		background-position: 0 0;
		width: 450px
		margin: auto
		&.image-uploaded:
			background-position: 0;
		&.sound-uploaded:
			background-position: 0;

.pull-right:
	float: right

.pull-left:
	float: left 
	
.Navigation:
	.wrapper:
		width : 980px
		background-image: url(/static/images/shadow_left.png), url(/static/images/shadow_right.png), url(/static/images/bg.png)
		background-repeat :  repeat-y, repeat-y,repeat
		background-position : top left, top right, top left
		margin : auto
		padding:1px
	.slide:
		width : 100%
		border : 1px solid #fff
		position : absolute
		left : 0
		overflow:scroll
		.wrapper :
			max-width : 980px
			margin : auto
	.next:
		position : absolute
		bottom : 60px
		left : 48%
		margin : auto
		cursor : pointer
		padding : 10px
		border-radius : 5px

